<%= simple_form_for(@user, html: { class: 'form-group' }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit, t('simple_form.user.common.register', action: @user.new_record? ? 'Создать' : 'Изменить'), class: "btn-primary" %>
  <%= f.button :button, "Clear", type: "reset", class: "btn-outline-secondary" %>
<% end %>
